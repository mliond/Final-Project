<div class="container">
  <div class="row">
    <div class="col-lg-5">
      <div id="item-info">


        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval="false">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <!-- Add here -->
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">
            <!-- Add here -->
          </div>

          <!-- Controls -->
          <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>



        <h5 id="item-name">Name</h5>
        <h5 id="item-description">Description</h5>
        <h5 id="item-location">Location</h5>
        <h5 id="item-created_at">Created</h5>
        <div id="claim-button">
          <h5 id="item-id">Id</h5>
          <h5 id="item-claimed">Claimed</h5>
          <button id="claim-button" class="btn btn-default">Claim!</button>
        </div>
        <div id="wrapper-new-button">
          <a id="new-button" class="btn btn-default">New!</a>
        </div>
        <div id="claimed-checkbox-wrapper">
          only unclaimed <input type="checkbox" id="unclaimed-checkbox">
        </div>
      </div>
      <div id="new-item">
        <h1>Create new item <%= @item.id %></h1>

        <%= form_for @item, html: {id: "new-item", multipart: true} do |f| %>
          <%= f.label :name %>
          <%= f.text_field :name %>
          <%= f.label :description %>
          <%= f.text_field :description %>
          <%= f.hidden_field :longitude %>
          <%= f.hidden_field :latitude %>
          <%= file_field_tag "images[]", type: :file, multiple: true %>
          <%= f.submit :submit, id: "submit-item" %>
        <% end %>

        <div id="search-address">
          Location:
          <input type="text" id="autocomplete_location">
          <a class="btn btn-default btn-sm" id="autocomplete_location">Go!</a>
        </div>
      </div>
    </div>
    <div class="col-lg-7">
      <div id="map-wrapper" style="width: 100%; height: 500px;">
        <div id="map-index" style="width: 100%; height: 100%;"></div>
        <div id="map-new-item" style="width: 100%; height: 100%;"></div>
      </div>
    </div>
  </div>
</div>
